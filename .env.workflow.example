CMM_CORPUS_PATH=/path/to/your/corpus
CMM_WORKSPACE_PATH=/tmp/cmm_container_runs

NEO4J_AUTH=neo4j/neo4j_password
NEO4J_PASSWORD=neo4j_password

# Workflow runtime tuning (safe defaults for large corpora).
ENABLE_UNSTRUCTURED=false
PREPROCESS_REQUIRED_FIELDS=material,country
STRUCTURED_KEEP_FIELDS=material,country,stage

# Optional, only needed when enabling live Milvus publish.
MILVUS_URI=
MILVUS_AUTH_TOKEN=
ARGO_EMBED_URL=https://apps.inside.anl.gov/argoapi/api/v1/resource/embed/
